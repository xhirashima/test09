    $(function(){
        $('#AuthUser_username').blur(function(){
            $.post(
                '{{ path('auth_mng_check_username') }}',
                {
                    'username': $('#AuthUser_username').val()
                },
                function(data){
                    var retstring = 'NG!!';
                    if(data.result == true && data.data.isunique == true){
                        retstring = 'OK!!';
                    }
                    $('#AuthUser_username_checkusername').text(retstring);
                }
            );
        });
    });
