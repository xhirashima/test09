{% endblock %}

{# body #}
{% block body %}

<form action="{{ path('auth_mng_create') }}" method="post" {{ form_enctype(form) }} novalidate>

    {{ form_widget(form) }}

    <input type="submit" />
</form>

{% endblock %}

{# username row カスタマイズ #}
{% form_theme form _self %}
{% block _AuthUser_username_row %}
    <div>
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        <span id="AuthUser_username_checkusername"></span>
    </div>
{% endblock %}
